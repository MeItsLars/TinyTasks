<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/create_task_text_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"

        android:text="Create Task 3/3"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"

        app:fontFamily="@font/roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/add_images_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/roboto"
        android:text="Add images (optional)"
        android:textSize="15sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_task_text_p3"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_images_text"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image_1"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_1"
        app:layout_constraintTop_toTopOf="@+id/add_images_text"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_2"
        app:layout_constraintTop_toBottomOf="@+id/add_image_3"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_3"
        app:layout_constraintTop_toBottomOf="@+id/add_images_text"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/add_image_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="add image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_4"
        app:layout_constraintTop_toBottomOf="@+id/add_image_5"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/create_task_button"
        android:layout_width="381dp"
        android:layout_height="61dp"

        android:layout_marginTop="8dp"

        android:layout_marginBottom="52dp"
        android:background="@drawable/button_custom"
        android:linksClickable="false"
        android:text="Create my task"
        android:textAllCaps="false"
        android:textColor="#fff"

        android:textSize="20sp"
        app:layout_constrainedLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRightOf_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image_4"
        app:layout_constraintVertical_bias="0.811"
        tools:layout_editor_absoluteX="14dp"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>