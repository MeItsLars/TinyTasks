<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test8">
    <!--android:background="#fff">-->

    <TextView
        android:id="@+id/create_task_text_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"

        android:text="@string/create_task_3_3"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"

        app:fontFamily="@font/roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/add_images_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/roboto"
        android:text="@string/add_images_optional"
        android:textSize="15sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_task_text_p3" />

    <ImageButton
        android:id="@+id/add_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_images_text" />

    <ImageButton
        android:id="@+id/add_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_image_1" />

    <ImageButton
        android:id="@+id/add_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_1"
        app:layout_constraintTop_toTopOf="@+id/add_images_text" />

    <ImageButton
        android:id="@+id/add_image_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_2"
        app:layout_constraintTop_toBottomOf="@+id/add_image_3" />

    <ImageButton
        android:id="@+id/add_image_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_3"
        app:layout_constraintTop_toBottomOf="@+id/add_images_text" />

    <ImageButton
        android:id="@+id/add_image_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="@string/add_image"

        android:background=""
        android:src="@drawable/ic_add_to_photos_blue_24dp"

        app:layout_constraintLeft_toRightOf="@+id/add_image_4"
        app:layout_constraintTop_toBottomOf="@+id/add_image_5" />

    <Button
        android:id="@+id/create_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="74dp"

        android:background="@drawable/button_custom"
        android:linksClickable="false"
        android:textAllCaps="false"
        android:text="@string/create_my_taskC"
        android:textSize="20sp"
        android:textColor="#fff"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedLeft_toLeftOf="parent"
        app:layout_constraintRightOf_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>